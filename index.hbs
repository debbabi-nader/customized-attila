{{!< default}}

<header id="blog-header" class="animate-fade-in{{#if @site.cover_image}} has-cover{{/if}}">

	<div id="blog-header-content-container">
		<h1 class="blog-name animate-fade-down">{{@site.title}}</h1>
		{{#if @site.description}}
		<span class="blog-description animate-fade-up">{{@site.description}}</span>
		{{/if}}
	</div>

	{{#if @site.cover_image}}
	<div class="cover">
		<img
			srcset="{{img_url @site.cover_image size="s"}} 320w,
				{{img_url @site.cover_image size="m"}} 640w,
				{{img_url @site.cover_image size="l"}} 960w,
				{{img_url @site.cover_image size="xl"}} 1920w"
      		src="{{img_url @site.cover_image size="xl"}}"
			alt="{{@site.title}}"
		/>
	</div>
	{{/if}}

	<a id="scroll-cue" href="#index"><i class="ic-arrow-down"></i></a>

</header>

<div id="index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
